style "Aero-button" = "Aero-default"
{
  # orange focus rectangle
  fg[NORMAL] = "#ffbb31"
  fg[INSENSITIVE] = "#ffbb31"
  fg[ACTIVE] = "#ffbb31"
  fg[SELECTED] = "#ffbb31"
  fg[PRELIGHT] = "#ffbb31"

  engine "pixmap"
  {
		image
		{
			function				 = BOX
			detail					 = "buttondefault"
      file             = "button-default.png"
      border           = { 8, 8, 8, 8 }
      stretch          = TRUE
		}
    image
    {
      function         = BOX
      shadow           = IN
      state            = PRELIGHT
      recolorable      = TRUE
      file             = "button-in-pre.png"
      border           = { 9, 9, 9, 9 }
      stretch          = TRUE
